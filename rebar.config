{deps, [
  {nkdocker, {git, "https://github.com/Nekso/nkdocker.git", {tag, "v0.118.2"}}},
  {dns_erlang, {git, "https://github.com/aetrion/dns_erlang.git", {branch, master}}}
]}.

{relx, [
  {release,
    {registrator, "0.0.0"},
    [registrator, inets, jsx]},
  {dev_mode, true},
  {include_erts, false},
  {extended_start_script, true},
  {sys_config, "./config/sys.config"}
]}.

{profiles, [
  {prod, [
    {relx, [
      {dev_mode, false},
      {include_erts, true}
    ]}
  ]}
]}.